<html>
    <head>
        <title>Temperature monitoring</title>
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <meta http-equiv="refresh" content="300">

        <link rel="shortcut icon" href="/public/humidity.png" type="image/png" />

        <script src="https://code.jquery.com/jquery-3.1.1.min.js"
                integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
                crossorigin="anonymous"></script>
        <script src="https://code.highcharts.com/highcharts.js"></script>
        <script src="https://code.highcharts.com/modules/exporting.js"></script>

        <script>
window.temperatureData = [
{{#each payload}}
[{{this.nseconds}}, {{this.temperature}}],
{{/each}}
]

window.humidityData = [
{{#each payload}}
[{{this.nseconds}}, {{this.humidity}}],
{{/each}}
]
        </script>

        <script>
$(function () {
    Highcharts.setOptions({
        global: {
            useUTC: false,
        },
    });

    $('#container').highcharts({
        chart: {
            zoomType: 'x'
        },
        title: {
            text: 'History'
        },
        subtitle: {
            text: document.ontouchstart === undefined ?
                'Click and drag in the plot area to zoom in' : 'Pinch the chart to zoom in'
        },
        xAxis: {
            type: 'datetime'
        },
        yAxis: {
            title: {
                text: ''
            }
        },
        legend: {
            enabled: true
        },
        plotOptions: {
            area: {
                fillColor: {
                    linearGradient: {
                        x1: 0,
                        y1: 0,
                        x2: 0,
                        y2: 1
                    },
                    stops: [
                        [0, Highcharts.getOptions().colors[0]],
                        [1, Highcharts.Color(Highcharts.getOptions().colors[0]).setOpacity(0).get('rgba')]
                    ]
                },
                marker: {
                    radius: 2
                },
                lineWidth: 1,
                states: {
                    hover: {
                        lineWidth: 1
                    }
                },
                threshold: null
            }
        },

        series: [{
            type: 'area',
            name: 'Temperature °C',
            data: temperatureData
        },
        {
            type: 'line',
            name: 'Humidity %',
            data: humidityData
        }]
    });
});
        </script>

        <style>

.title {
        text-align: center;
        vertical-align: middle;
        font-size: 30px;
        line-height: 100px;
}

.title img {
        vertical-align: middle;
        max-height: 50px;
        display: inline;
}

#container {
        min-width: 310px;
        height: 400px;
        margin: 0 auto;
}

.highcharts-credits {
        display: none;
}
        </style>
    </head>
    <body>
    <div class="title">
        <img src="/public/humidity.png"/>
        °C%
        </div>
        <div id="container"></div>
    </body>
</html>
